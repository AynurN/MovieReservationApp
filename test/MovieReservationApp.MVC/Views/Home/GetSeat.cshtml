
@model List<SeatReservationGetVM>
@{
    int num = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div style="display:flex; justify-content:space-between">
                            <h4 class="card-title">Category Table</h4>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        
                                        <th>
                                            Book Seat
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (SeatReservationGetVM st in Model)
                                    {

                                        num++;

                                        <tr>
                                            <td class="py-1">
                                                @num
                                            </td>
                                            <td>
                                                <p style="color:black">@st.SeatNumber</p>
                                            </td>
                                            @if (st.IsBooked == false)
                                            {
                                                <td>
                                                    <a asp-action="book" asp-route-id="@st.Id" class="btn btn-warning">Book </a>

                                                </td>
                                            }
                                            else
                                            {
                                                <td class="text-danger"> Booked</td>
                                            }


                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
