@model List<ShowTimeGetVM>
@{
    int num = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div style="display:flex; justify-content:space-between">
                            <h4 class="card-title">Category Table</h4>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Movie Title
                                        </th>
                                        <th>
                                            Theater 
                                        </th>
                                        <th>
                                            Start Time
                                        </th>
                                        <th>
                                            End Time
                                        </th>
                                        <th>
                                            Book Seats
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ShowTimeGetVM st in Model)
                                    {
                                       
                                        num++;

                                        <tr>
                                            <td class="py-1">
                                                @num
                                            </td>
                                            <td>
                                                <p style="color:black">@st.MovieTitle</p>
                                            </td>
                                            <td>
                                                <p style="color:black">@st.TheaterName</p>
                                            </td>

                                            <td>
                                                <p style="color:black">@st.StartTime</p>
                                            </td>
                                            <td>
                                                <p style="color:black">@st.EndTime</p>
                                            </td>
                                            <td>
                                                <a asp-action="getSeat" asp-route-id="@st.Id" class="btn btn-warning">Book </a>
                                                
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
