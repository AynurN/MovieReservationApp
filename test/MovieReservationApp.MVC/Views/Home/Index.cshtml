@model List<MovieGetVM>
	<section id="trend" class="pt-4 pb-5">
		<div class="container">
			<div class="row trend_1">
				<div class="col-md-6 col-6">
					<div class="trend_1l">
						<h4 class="mb-0"><i class="fa fa-youtube-play align-middle col_red me-1"></i> Latest <span class="col_red">Movies</span></h4>
					</div>
				</div>
				<div class="col-md-6 col-6">
					<div class="trend_1r text-end">
					<h6 class="mb-0"><a class="button" asp-action="login" asp-controller="auth"> Sign in</a></h6>
					</div>
				</div>
			</div>
			<div class="row trend_2 mt-4">
				<div id="carouselExampleCaptions1" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-indicators">
						<button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
						<button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="1" aria-label="Slide 2" class="" aria-current="true"></button>
					</div>
					
							<div class="trend_2i row">
						@foreach (MovieGetVM movie in Model)
						{
							<div class="col-md-3 col-6">
								<div class="trend_2im clearfix position-relative">
									<div class="trend_2im1 clearfix">
										<div class="grid">
											<figure class="effect-jazz mb-0">
												<a href="#"><img src="~/home_assets/img/4.jpg" class="w-100" alt="img25"></a>
											</figure>
										</div>
									</div>
									<div class="trend_2im2 clearfix text-center position-absolute w-100 top-0">
										<span class="fs-1"><a class="col_red" href="#"><i class="fa fa-youtube-play"></i></a></span>
									</div>
								</div>
								<div class="trend_2ilast bg_grey p-3 clearfix">
								<h5><a class="col_red movie-title" asp-action="Reserve" asp-route-id="@movie.Id" >@movie.Title</a></h5>
									@if (!string.IsNullOrEmpty(movie.Desc))
									{
										@((movie.Desc.Length > 30) ? @movie.Desc.Substring(0, 30) : @movie.Desc)
									}
									<span class="col_red">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
									</span>
									<p class="mb-0">1 Views</p>
								</div>
							</div>
						}

								
								
						
						
					</div>

				</div>
			</div>
		</div>
	</section>

